
//DAO层接口 DAO可以不写实现类  由容器创建实现类
@Mapper  //@Mapper定义成为mapper文件映射
@Repository
public interface UserDao {

    //添加  此方式注解解决了配置mapper.xml文件
    @Insert("INSERT INTO user(uName,uPassword,uType) values(#{uname},#{uPassword},#{uType})")
        public  void add(User user);

    //修改  直接定义sql语句 节省了配置mapper.xml文件
    @Update("UPDATE user SET name=#{namer} WHERE uId=#{uId}")
        public  void  update(User user);

    //删除
    @Delete("DELETE FROM user WHERE uId=#{uId}")
        public  void  del(int uId);

    //查询所有
    @Select("SELECT * FROM user  ")
        public List <User> selectAll();

    //按ID查询
    @Select("SELECT * FROM user WHERE uId=#{uId}")
        public  User get(int uId);

}
